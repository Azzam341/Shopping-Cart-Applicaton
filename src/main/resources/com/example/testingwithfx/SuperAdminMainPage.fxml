<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.testingwithfx.SuperAdminMainPageController">
    <children>
        <Pane onDragDetected="#setChangePassword" prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: #f9f5d7;">
            <children>
                <!-- Dashboard Label -->
                <Label layoutX="445.0" layoutY="30.0" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #7a2c7f;" text="Super Admin Dashboard" />

                <!-- Log Out Button -->
                <Button fx:id="logOut" layoutX="40.0" layoutY="650.0" mnemonicParsing="false" onAction="#setLogOut" prefHeight="50.0" prefWidth="200.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #7a2c7f; -fx-text-fill: white; -fx-border-radius: 25px; -fx-background-radius: 25px;" text="Log Out" />

                <!-- Hire Inventory Manager Button -->
                <Button fx:id="hireAdmin" layoutX="447.0" layoutY="135.0" mnemonicParsing="false" onAction="#hireAdmin" prefHeight="50.0" prefWidth="341.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #7a2c7f; -fx-text-fill: white; -fx-border-radius: 25px; -fx-background-radius: 25px;" text="Hire an Admin" />

                <!-- Fire Inventory Manager Button -->
                <Button fx:id="fireAdmin" layoutX="447.0" layoutY="255.0" mnemonicParsing="false" onAction="#fireAdmin" prefHeight="50.0" prefWidth="341.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #7a2c7f; -fx-text-fill: white; -fx-border-radius: 25px; -fx-background-radius: 25px;" text="Fire an Admin" />

                <!-- Update Inventory Manager Rank Button -->
                <Button fx:id="updateAdminRank" layoutX="447.0" layoutY="375.0" mnemonicParsing="false" onAction="#updateAdminRank" prefHeight="50.0" prefWidth="341.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #7a2c7f; -fx-text-fill: white; -fx-border-radius: 25px; -fx-background-radius: 25px;" text="Update Admin Rank" />
            <Button fx:id="changePassword" layoutX="447.0" layoutY="484.0" mnemonicParsing="false" onAction="#setChangePassword" prefHeight="50.0" prefWidth="341.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #7a2c7f; -fx-text-fill: white; -fx-border-radius: 25px; -fx-background-radius: 25px;" text="Change Password" />
            <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="32.0" layoutY="30.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@Logo/Picture1.png" />
               </image>
            </ImageView>
            </children>
        </Pane>
    </children>
</AnchorPane>
