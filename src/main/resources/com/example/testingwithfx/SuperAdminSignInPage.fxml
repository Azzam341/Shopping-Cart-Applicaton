<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.testingwithfx.SuperAdminSignInController">
    <children>
        <Pane prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: #f9f5d7;">
            <children>
                <!-- Title Label -->
                <Label layoutX="482.0" layoutY="27.0" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #7a2c7f;" text="SUPER ADMIN SIGN IN" />

                <!-- Username Label and Text Field -->
                <Label layoutX="374.0" layoutY="171.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #7a2c7f;" text="Username:" />
                <TextField fx:id="ID" layoutX="490.0" layoutY="164.0" prefHeight="40.0" prefWidth="300.0" style="-fx-font-size: 16px;" />

                <!-- Password Label and Password Field -->
                <Label layoutX="376.0" layoutY="272.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #7a2c7f;" text="Password:" />
                <PasswordField fx:id="password" layoutX="490.0" layoutY="265.0" prefHeight="40.0" prefWidth="300.0" style="-fx-font-size: 16px;" />

                <!-- Sign In Button -->
                <Button fx:id="signIn" layoutX="540.0" layoutY="373.0" mnemonicParsing="false" onAction="#signInLogic" prefHeight="50.0" prefWidth="200.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #7a2c7f; -fx-text-fill: white; -fx-border-radius: 25px; -fx-background-radius: 25px;" text="Sign In" />

                <!-- Back Button (Updated with same purple color) -->
                <Button fx:id="back" layoutX="40.0" layoutY="650.0" mnemonicParsing="false" onAction="#setBack" prefHeight="50.0" prefWidth="200.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #7a2c7f; -fx-text-fill: white; -fx-border-radius: 25px; -fx-background-radius: 25px;" text="Back" />
            </children>
        </Pane>
    </children>
</AnchorPane>
